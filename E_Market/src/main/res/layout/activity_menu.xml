<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activity.MenuActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/market_logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/appTitle"
        android:layout_below="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-Market"
        android:textColor="@color/main"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnShowProducts"
        android:layout_below="@+id/appTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Show Products"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_field"
        android:backgroundTint="@color/main"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSellProducts"
        android:layout_below="@+id/btnShowProducts"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sell Products"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_field"
        android:backgroundTint="@color/main"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChat"
        android:layout_below="@+id/btnSellProducts"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_field"
        android:backgroundTint="@color/main"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAbout"
        android:layout_below="@+id/btnChat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_field"
        android:backgroundTint="@color/main"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        android:layout_below="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_field"
        android:backgroundTint="@color/main"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tips"
        android:layout_below="@+id/btnLogout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Tips"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_field"
        android:backgroundTint="#C57B0E"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>